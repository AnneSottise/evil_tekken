.card.shadow-sm
  .card-header
    %h4.card-text
      = character.name.upcase
      - if winner
        = "🏆"
  = image_tag character.avatar.url, class: 'bd-placeholder-img'
  .card-body
    %p.d-flex.align-self-center
      %span.badge.bg-primary.me-auto= "LVL #{character.level}"
      %span.badge.bg-success= "#{character.life} LIFE"
      %span.badge.bg-danger= "#{character.attack} ATK"
      %span.badge.bg-info= "#{character.defense} DEF"

    %p
      %span= "Experience: #{character.experience} pts"
      %br
      %span= "Fights: #{character.fights.count}"
      %br
      %span= "Win rate: #{format_win_rate(character.win_rate)}"
      %br
      %span= "Favorite weapon: #{character.favorite_weapon}"
  .card-footer
    .d-flex.justify-content-end
      .btn-group
        = link_to 'Edit', edit_character_path(character), class: 'btn btn-sm btn-secondary'
        = link_to 'Destroy', edit_character_path(character), class: 'btn btn-sm btn-danger'
